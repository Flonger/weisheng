body
  padding-top 86px
#app
  #navBar
    /*background-color rgba(0, 0, 0, 0.6)*/
.content
  .img-responsive
    display block
    max-width 100%
  .bgChunk
    font-size 16px
  .blogChunk
    margin 50px auto
    h2
      padding: 0 10px;
      line-height: 40px;
      height: 40px;
      font-size: 18px;
      border-bottom: 1px solid #e5e5e5;
      border-left: 5px solid #333;
      color: #333;
    .list
      padding: 10px;
      overflow: hidden;
      margin-top: 0;
      li
        padding-bottom 15px
        border-bottom 1px solid #e5e5e5
        a
          color: #555;
          text-decoration none
          font-size 16px
        h3
          line-height: 30px;
          font-size 18px
          font-weight 600
          margin: 10px 0;
        .detail
          overflow hidden
          line-height 24px
          p
            max-height 120px
            overflow hidden
        .date
          margin-top 10px
          font-size 14px
          color #838383
    .popular_list
      padding 10px 0
      li
        margin-bottom 15px
        a
          text-decoration none
          color #555
          font-size 16px
          .description
            p
              max-height 50px
              overflow hidden
              line-height 24px
    .pageNav
      margin 0 auto
footer
  height 120px
  background:rgba(51,49,49,1);
  color #fff
  font-size:16px
  @media screen and (max-width: 576px) 
    height: 220px;
    text-align: center;
  .row
    padding-top: 20px
    padding-bottom: 20px
    @media screen and (max-width: 576px) 
      padding-top: 0px
      padding-bottom: 0px
    img
      @media screen and (max-width: 576px) 
        padding-bottom: 10px
  p
    font-size 16px
    line-height 24px
  a
    outline none
    padding 0 10px
    color #fff
    text-decoration none
    &:hover
      text-decoration none
      color #fef85e
