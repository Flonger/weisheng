#evaluate
  background rgba(245,245,245,1);
  padding-bottom $pb50
  .swiper-container
    /*padding 0 80px
    box-sizing border-box*/
  .swiper-slide
    padding 0 30px
    @media (max-width: 768px){
      .parcel{
        width 250px
      }
    }
    .parcel
      min-height 280px
      margin 0 auto
      text-align center
      padding 30px 10px
      box-sizing border-box
      background:rgba(255,255,255,1);
      box-shadow:0 0 7px 0 rgba(0, 0, 0, 0.17);
      border-radius:10px;
      .stars
        i
          display inline-block
          margin: 10px 0;
          position: relative;
          color: #FFC425;
          width: 0;
          height: 0;
          border-right:  10px solid transparent;
          border-bottom: 7px  solid #FFC425;
          border-left:   10px solid transparent;
          transform rotate(35deg)
          &:before
            border-bottom: 8px solid #FFC425;
            border-left: 3px solid transparent;
            border-right: 3px solid transparent;
            position: absolute;
            height: 0;
            width: 0;
            top: -4.5px;
            left: -6.5px;
            display: block;
            content: '';
            transform rotate(-35deg)
          &:after
            position: absolute;
            display: block;
            color: #FFC425;
            top: .5px;
            left: -10.5px;
            width: 0;
            height: 0;
            border-right: 10px solid transparent;
            border-bottom: 7px solid #FFC425;
            border-left: 10px solid transparent;
            transform rotate(-70deg)
            content: '';
      .name
        font-size:18px;
        font-weight:700;
        color:rgba(118,123,131,1);
      .evaluate
        font-size:18px;
        color:rgba(177,185,199,1);
        text-align left
        line-height 24px
  .swiper-button-prev
    left 0
    background none
  .swiper-button-next
    right 0
    background none
